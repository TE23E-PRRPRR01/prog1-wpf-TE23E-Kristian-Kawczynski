<Window x:Class="mmm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mmm"
        mc:Ignorable="d"
        Title="To do list" Height="500" Width="300">
    
        <StackPanel Margin="10">
            <Label>Enter a Task:</Label>
            <TextBox Name="txbTaskInput" Height="30"/>
    
            <Button Click="KlickAdd" Content="Add Task" Margin="0,10,0,0" />
            <Button Click="KlickHistory" Content="Show Tasks" />

            <Label Margin="0,10,0,0">Delete a Task:</Label>
            <TextBox Name="txbTaskDel" Height="30"></TextBox>
            <Button Click="KlickDelete" Content="Delete task"></Button>
    
    
            <Label Margin="0,10,0,0">Tasks:</Label>
            <TextBox Name="txbTaskDisplay" Height="100" IsReadOnly="True"/>

            <Button Click="KlickClear">Clear Tasks</Button>
        </StackPanel>
</Window>
